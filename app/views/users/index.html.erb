<div class="row">
<h1>Users</h1> <hr>
  <div class="column">
    <table class="table table-striped table-hover">
      <tbody>
        <% @users.each do |user| %>
        <tr class ="default">
          <td>
            <%= link_to user.email, user_path(user) %> | role: <span class="text-info"><%= user.role %></span>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
